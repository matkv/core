    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go: debug core serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/core",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            }
        },
        {
            "name": "Go: run core serve (no debug)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/core",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            }
        },
        {
            "name": "Frontend: npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "cd web && npm run dev",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Dev: Go API + Svelte dev",
            "configurations": [
                "Go: debug core serve",
                "Frontend: npm run dev"
            ]
        }
    ]
}