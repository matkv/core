{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Core CLI (root)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/core/main.go",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Go: debug core serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/core",
            "args": ["serve"],
            "cwd": "${workspaceFolder}",
            "env": { "GO111MODULE": "on" }
        },
        {
            "name": "Go: run core serve (no debug)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/core",
            "args": ["serve"],
            "cwd": "${workspaceFolder}",
            "env": { "GO111MODULE": "on" }
        },
        {
            "name": "Frontend: npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "cd web && npm run dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Svelte: Debug in Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:4173",
            "webRoot": "${workspaceFolder}/web/src",
            "pathMappings": [
                {
                    "url": "http://localhost:4173/src",
                    "path": "${workspaceFolder}/web/src"
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "Dev: Go API + Svelte dev",
            "configurations": [
                "Go: debug core serve",
                "Frontend: npm run dev"
            ]
        },
        {
            "name": "Dev: Go + Svelte (full debug)",
            "configurations": [
                "Go: debug core serve",
                "Frontend: npm run dev",
                "Svelte: Debug in Firefox"
            ]
        }
    ]
}