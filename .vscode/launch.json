{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Core CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/core/main.go",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Svelte: Debug in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4173",
            "webRoot": "${workspaceFolder}/web",
            "sourceMapPathOverrides": {
                "/@fs/*": "/*",
                "vite:///*": "${workspaceFolder}/web/*",
                "webpack:///*": "${workspaceFolder}/web/*",
                "*/src/*": "${workspaceFolder}/web/src/*",
                "*/node_modules/*": "${workspaceFolder}/web/node_modules/*",
                "/*": "${workspaceFolder}/web/*"
            },
            "presentation": { "hidden": true }
        },
        {
            "name": "Go: debug core serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/core",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "presentation": { "hidden": true }
        },
        {
            "name": "Frontend: npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "cd web && npm run dev",
            "cwd": "${workspaceFolder}",
            "presentation": { "hidden": true }
        },
    ],
    "compounds": [
        {
            "name": "Dev: Go + Svelte (full debug)",
            "configurations": [
                "Go: debug core serve",
                "Frontend: npm run dev",
                "Svelte: Debug in Chrome"
            ],
            "presentation": { "hidden": false }
        }
    ]
}